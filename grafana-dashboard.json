{
  "dashboard": {
    "title": "Jetson Orin NX Monitoring",
    "tags": ["jetson", "nvidia"],
    "timezone": "browser",
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "title": "GPU Usage",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "jetson_usage_gpu",
            "refId": "A",
            "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"}
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 70, "color": "yellow"},
                {"value": 90, "color": "red"}
              ]
            }
          }
        },
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        }
      },
      {
        "id": 2,
        "title": "CPU Usage",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 0},
        "targets": [
          {
            "expr": "jetson_usage_cpu",
            "refId": "A",
            "legendFormat": "{{cpu}}",
            "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"}
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "custom": {
              "drawStyle": "line",
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 3,
        "title": "RAM Usage",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 0},
        "targets": [
          {
            "expr": "jetson_usage_ram{type=\"used\"} / 1024 / 1024",
            "refId": "A",
            "legendFormat": "Used (GB)",
            "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"}
          },
          {
            "expr": "jetson_usage_ram{type=\"total\"} / 1024 / 1024",
            "refId": "B",
            "legendFormat": "Total (GB)",
            "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"}
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "decgbytes",
            "custom": {
              "drawStyle": "line",
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Temperatures",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "jetson_temperatures",
            "refId": "A",
            "legendFormat": "{{sensor}}",
            "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"}
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "celsius",
            "custom": {
              "drawStyle": "line",
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Power Consumption",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "jetson_power{rail=\"tot\"} / 1000",
            "refId": "A",
            "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"}
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "watt",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 10, "color": "yellow"},
                {"value": 15, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Fan Speed",
        "type": "gauge",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 8},
        "targets": [
          {
            "expr": "jetson_fan_speed",
            "refId": "A",
            "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"}
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 60, "color": "yellow"},
                {"value": 80, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Disk Usage",
        "type": "gauge",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "(jetson_disk_usage{type=\"used\"} / jetson_disk_usage{type=\"total\"}) * 100",
            "refId": "A",
            "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"}
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 70, "color": "yellow"},
                {"value": 90, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "System Uptime",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 12},
        "targets": [
          {
            "expr": "jetson_uptime_seconds / 86400",
            "refId": "A",
            "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"}
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "d",
            "decimals": 1
          }
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  },
  "overwrite": true
}